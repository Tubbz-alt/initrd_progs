#!/bin/sh
# special pkg [woofce apps]

. ../../func

build() {
	cd w_apps
	_make
	APPS='cddetect daemon debdb2pupdb elspci fakelogin find_cat findpkgs-dep-helper findpkgs-search-helper printcols syslog vercmp zinit pup_event_frontend_d'
	dir=w_apps_static-$(date "+%Y%m%d")
	mkdir -p ../${dir}/${ARCH}
	mv $APPS ../${dir}/${ARCH}
	make clean
	cd ..
	tar -Jcf ${dir}.tar.xz ${dir}
	mv ${dir}.tar.xz $MWD
	cd -
}

# main
[ "$DLD_ONLY" = "yes" ] && exit
build

### END ###
